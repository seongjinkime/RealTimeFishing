<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:layout_weight="2.1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_temp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99.9°"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                />
            <ImageView
                android:id="@+id/iv_weather_icon"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_toRightOf="@id/tv_temp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/w_01d"
                />
            <TextView
                android:id="@+id/tv_post_info"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated at Ansan,\nPyeonTaek"
                android:textColor="@android:color/white"
                android:alpha="0.5"
                android:gravity="left"
                android:layout_alignParentLeft="true"
                android:textSize="13dp"
                android:layout_toLeftOf="@id/tv_temp"
                android:layout_margin="10dp"

                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_weight="2.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/luna_calander_icon"
                    android:id="@+id/iv_lunaCal"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/tv_lunar_date"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-05-31"
                    android:textSize="13dp"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#c0c0c0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sea_icon"
                    android:id="@+id/iv_tide_time"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                   android:layout_marginRight="10dp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_tide_time"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9물"
                    android:textSize="13dp"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#c0c0c0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/humidity"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_marginRight="10dp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_humidity"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="34%"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.1">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="3dp"
           android:layout_weight="1"
           android:layout_marginBottom="5dp"
           android:orientation="horizontal"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_weight="1"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="13dp"
                   android:text="풍속"
                   android:layout_marginBottom="3dp"
                   android:textColor="@android:color/white"
                   android:layout_gravity="center_horizontal"
                   />

               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   >

                   <ImageView
                       android:id="@+id/iv_wind_compass"

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:adjustViewBounds="true"
                       android:scaleType="fitXY"
                       android:src="@drawable/compass"/>

                   <TextView
                       android:id="@+id/tv_wind_speed"

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="3.45m/s"
                       android:textColor="@android:color/white"
                       android:layout_gravity="center"
                       android:textSize="10dp"
                       />
               </FrameLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_weight="1"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="조류"
                   android:layout_marginBottom="3dp"
                   android:textSize="13dp"
                   android:textColor="@android:color/white"
                   android:layout_gravity="center_horizontal"
                   />

               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   >

                   <TextView
                       android:id="@+id/tv_tide_speed"

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="3.45m/s"
                       android:textColor="@android:color/white"
                       android:layout_gravity="center"
                       android:textSize="10dp"
                       />

                   <ImageView
                       android:id="@+id/iv_tide_compass"

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:adjustViewBounds="true"
                       android:scaleType="fitXY"
                       android:src="@drawable/compass" />
               </FrameLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_weight="1"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="수온"
                   android:textSize="13dp"
                   android:layout_marginBottom="3dp"
                   android:textColor="@android:color/white"
                   android:layout_gravity="center_horizontal"
                   />

               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   >

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:src="@drawable/temp_circle"/>

                   <LinearLayout
                       android:layout_width="72dp"
                       android:layout_height="72dp"
                       android:orientation="vertical"
                       android:layout_gravity="center"
                       android:gravity="center_vertical"
                       >
                       <TextView
                           android:id="@+id/tv_water_temp"

                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="10.9"
                           android:textColor="@android:color/white"
                           android:layout_gravity="center_horizontal"
                           android:textSize="10dp"
                           android:layout_marginBottom="5dp"
                           />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="°C"
                           android:textColor="@android:color/white"
                           android:layout_gravity="center_horizontal"
                           android:layout_marginTop="5dp"
                           android:textSize="10dp"
                           />

                   </LinearLayout>


               </FrameLayout>

           </LinearLayout>


       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="조석"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:src="@drawable/water_background"
                    android:scaleType="fitXY"
                    android:alpha="0.3"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5.5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="간조시간"
                            android:textColor="@android:color/white"
                            android:textSize="10dp"
                            android:layout_weight="1.1"
                            />

                        <TextView
                            android:id="@+id/tv_first_low_tide_time"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="20:00:00"
                            android:textSize="11dp"
                            android:textColor="@android:color/white"

                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/tv_first_low_tide_level"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="(+160)"
                            android:textSize="10dp"
                            android:layout_weight="1.3"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="만조시간"
                            android:textColor="@android:color/white"
                            android:textSize="10dp"
                            android:layout_weight="1.1"
                            />

                        <TextView
                            android:id="@+id/tv_first_high_tide_time"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="11dp"
                            android:text="20:00:00"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/tv_first_high_tide_level"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="(+160)"
                            android:textSize="10dp"
                            android:layout_weight="1.3"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="간조시간"
                            android:textSize="10dp"
                            android:layout_weight="1.1"
                            />

                        <TextView
                            android:id="@+id/tv_second_low_tide_time"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="20:00:00"
                            android:textSize="11dp"
                            android:textColor="@android:color/white"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/tv_second_low_tide_level"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="(+160)"
                            android:textSize="10dp"
                            android:layout_weight="1.3"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="만조시간"
                            android:textColor="@android:color/white"
                            android:textSize="10dp"
                            android:layout_weight="1.1"
                            />

                        <TextView
                            android:id="@+id/tv_second_high_tide_time"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="20:00:00"
                            android:textSize="11dp"
                            android:textColor="@android:color/white"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/tv_second_high_tide_level"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:text="(+160)"
                            android:textSize="10dp" />

                    </LinearLayout>


                </LinearLayout>
            </FrameLayout>



        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</LinearLayout>